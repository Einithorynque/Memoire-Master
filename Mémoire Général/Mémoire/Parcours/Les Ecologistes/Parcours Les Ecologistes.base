views:
  - type: table
    name: Description
    filters:
      and:
        - file.inFolder("Parcours/Les Ecologistes")
        - Type == ["PARCOURS"]
    order:
      - file.name
      - Parcours
      - Écrans
      - Scrolls
      - Récurrence
      - Description
      - Réponse au problème
    sort:
      - property: Écrans
        direction: ASC
      - property: Réponse au problème
        direction: DESC
    columnSize:
      note.Parcours: 128
      note.Écrans: 84
      note.Description: 383
      note.Réponse au problème: 65
    rowHeight: medium
  - type: table
    name: Accueil-affordances
    filters:
      and:
        - file.inFolder("Parcours/Les Ecologistes")
        - Type == ["PARCOURS"]
        - Parcours.contains("Accueil")
        - note["Réponse au problème"] == true
    order:
      - file.name
      - Complétion
      - Écrans
      - Scrolls
      - Récurrence
      - Description
      - Mécanisme Affordance
    sort:
      - property: Scrolls
        direction: ASC
      - property: Écrans
        direction: ASC
    rowHeight: medium
    columnSize:
      note.Complétion: 48
      note.Écrans: 94
      note.Description: 383
